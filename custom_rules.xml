<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules" default="debug">

    <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>

    <property file="../custom_local.properties" />

    <target name="-post-build" depends="copy-to-output-dir,copy-to-cloud-dir">
    </target>

    <target name="copy-to-output-dir">
        <xmlproperty file="AndroidManifest.xml" prefix="mymanifest" collapseAttributes="true"/>
        <copy file="${out.final.file}" tofile="${output.dir}/${ant.project.name}_v${mymanifest.manifest.android:versionName}_r${mymanifest.manifest.android:versionCode}.apk"/>
    </target>

    <target name="copy-to-cloud-dir">
        <xmlproperty file="AndroidManifest.xml" prefix="mymanifest" collapseAttributes="true"/>
        <copy file="${out.final.file}" tofile="${output.cloud.dir}/${ant.project.name}_v${mymanifest.manifest.android:versionName}_r${mymanifest.manifest.android:versionCode}.apk"/>
    </target>

</project>
