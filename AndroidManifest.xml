<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.mtransit.android.ca_montreal_stm_bus"
    tools:ignore="MissingVersion" >
    <!-- REQUEST PERMISSIONS USAGE -->
    <!-- INTERNET: Used for real time information and more -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- BROADCAST_RECEIVER: required to read modules data -->
    <uses-permission android:name="org.mtransit.android.receiver.permission.BROADCAST_RECEIVER" />
    <!-- DECLARES PERMISSIONS -->
    <permission
        android:name="org.mtransit.android.provider.permission.READ_PROVIDER"
        android:description="@string/provider_permission_description_read"
        android:label="@string/provider_permission_label_read"
        android:protectionLevel="signature" />
    <permission
        android:name="org.mtransit.android.receiver.permission.BROADCAST_RECEIVER"
        android:description="@string/receiver_permission_description_broadcast"
        android:label="@string/receiver_permission_label_broadcast"
        android:protectionLevel="signature" />
    <!-- USES FEATURE (not required) -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:description="@string/app_desc"
        android:icon="@mipmap/module_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <!-- SPLASH SCREEN -->
        <activity
            android:name="org.mtransit.android.commons.ui.ModuleRedirectActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:enabled="true"
            android:icon="@mipmap/module_app_icon"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/ModuleBaseTheme"
            tools:ignore="MissingRegistered">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- GFTS ROUTE TRIP STOP & SCHEDULE PROVIDER -->
        <provider
            android:name="org.mtransit.android.commons.provider.GTFSProvider"
            android:authorities="@string/gtfs_rts_authority"
            android:exported="true"
            android:readPermission="org.mtransit.android.provider.permission.READ_PROVIDER"
            tools:ignore="MissingRegistered" >
            <meta-data
                android:name="@string/agency_provider"
                android:value="@string/agency_provider" />
            <meta-data
                android:name="@string/agency_provider_type"
                android:value="@integer/gtfs_rts_agency_type" />
            <meta-data
                android:name="@string/poi_provider"
                android:value="@string/poi_provider" />
            <meta-data
                android:name="@string/status_provider"
                android:value="@string/status_provider" />
            <meta-data
                android:name="@string/status_provider_target"
                android:value="@string/gtfs_status_for_poi_authority" />
            <meta-data
                android:name="@string/rts_provider"
                android:value="@string/rts_provider" />
            <meta-data
                android:name="@string/schedule_provider"
                android:value="@string/schedule_provider" />
            <meta-data
                android:name="@string/schedule_provider_target"
                android:value="@string/gtfs_rts_authority" />
        </provider>
        <!-- STM INFO API PROVIDER -->
        <provider
            android:name="org.mtransit.android.commons.provider.StmInfoApiProvider"
            android:authorities="@string/stm_info_api_authority"
            android:exported="true"
            android:readPermission="org.mtransit.android.provider.permission.READ_PROVIDER"
            tools:ignore="MissingRegistered" >
            <meta-data
                android:name="@string/status_provider"
                android:value="@string/status_provider" />
            <meta-data
                android:name="@string/status_provider_target"
                android:value="@string/stm_info_api_status_for_poi_authority" />
            <meta-data
                android:name="@string/service_update_provider"
                android:value="@string/service_update_provider" />
            <meta-data
                android:name="@string/service_update_provider_target"
                android:value="@string/stm_info_api_service_update_for_poi_authority" />
        </provider>
        <!-- TWITTER NEWS PROVIDER -->
        <provider
            android:name="org.mtransit.android.commons.provider.TwitterNewsProvider"
            android:authorities="@string/twitter_authority"
            android:exported="true"
            android:readPermission="org.mtransit.android.provider.permission.READ_PROVIDER"
            tools:ignore="MissingRegistered" >
            <meta-data
                android:name="@string/news_provider"
                android:value="@string/news_provider" />
            <meta-data
                android:name="@string/news_provider_target"
                android:value="@string/twitter_target_for_poi_authority" />
        </provider>
        <!-- RSS NEWS PROVIDER -->
        <provider
            android:name="org.mtransit.android.commons.provider.RSSNewsProvider"
            android:authorities="@string/rss_authority"
            android:exported="true"
            android:readPermission="org.mtransit.android.provider.permission.READ_PROVIDER"
            tools:ignore="MissingRegistered" >
            <meta-data
                android:name="@string/news_provider"
                android:value="@string/news_provider" />
            <meta-data
                android:name="@string/news_provider_target"
                android:value="@string/rss_target_for_poi_authority" />
        </provider>
        <!-- YOUTUBE NEWS PROVIDER -->
        <provider
            android:name="org.mtransit.android.commons.provider.YouTubeNewsProvider"
            android:authorities="@string/youtube_authority"
            android:exported="true"
            android:readPermission="org.mtransit.android.provider.permission.READ_PROVIDER"
            tools:ignore="MissingRegistered" >
            <meta-data
                android:name="@string/news_provider"
                android:value="@string/news_provider" />
            <meta-data
                android:name="@string/news_provider_target"
                android:value="@string/youtube_target_for_poi_authority" />
        </provider>
    </application>
</manifest>
